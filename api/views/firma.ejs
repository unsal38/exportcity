<%- include ('path/head') %>
    <link href="/stylesheets/firma.css" rel="stylesheet" />
    </head>

    <body id="page-top">

        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">
                <span class="d-block d-lg-none">Clarence Taylor</span>
                <span class="d-none d-lg-block"><img class="img-fluid img-profile rounded-circle mx-auto mb-2"
                        src="/images/firma-img/profile.jpg" alt="firma img" /></span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span
                    class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item text-capitalize dropdown d-flex justify-content-center">
                        <a class="capitalize nav-link click-scroll dropdown-toggle" href="#top"
                            id="navbarLightDropdownMenuLink" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            <%= lang_json_data.dil_sec _%>
                        </a>

                        <ul id="lang_select" class="dropdown-menu dropdown-menu-light"
                            aria-labelledby="navbarLightDropdownMenuLink">
                            <li><a id="tr" class="dropdown-item" href="javascript:void(0)">
                                    <%= lang_json_data.turkce _%>
                                </a></li>

                            <li><a id="en" class="dropdown-item" href="javascript:void(0)">
                                    <%= lang_json_data.ingilizce _%>
                                </a></li>
                        </ul>
                    </li>

                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/">
                            <%= lang_json_data.ana_sayfa_%>
                        </a>
                    </li>
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#about">
                            <%= lang_json_data.hakkimizda _%>
                        </a>
                    </li>
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#information">
                            <%= lang_json_data.bilgiler _%>
                        </a>
                    </li>
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#katalog">
                            <%= lang_json_data.katalog _%>
                        </a>
                    </li>
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#iletisim">
                            <%= lang_json_data.iletisim _%>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- Page Content-->
        <div class="container-fluid p-0">
            <!-- About-->
            <section class="resume-section" id="about">
                <div data-h1="<%= user_data.firmaUnvani _%>" class="resume-section-content">
                    <h1 class="mb-0"><!--BURAYA JQERY İLE EKLENİYOR FİRMA JS İÇERİSİNDE--></h1>
                    <div class="subheading mb-5">
                        <%= user_data.billingAddressAddress %>
                            <a href="mailto:name@email.com">
                                <%= user_data.email %>
                            </a>
                    </div>
                    <p class="lead mb-5">
                        <%= user_data.hakkimizda[lang] %>
                    </p>
                </div>
            </section>
            <hr class="m-0" />
            <!-- information-->
            <section class="resume-section" id="information">
                <div class="resume-section-content">
                    <h2 class="mb-5">bilgiler</h2>
                    <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                        <div class="flex-grow-1">
                            <h3 class="mb-0">
                                <%= lang_json_data.firmamiz _%>
                            </h3>
                            <div class="subheading mb-3">
                                <%= lang_json_data.genel_bilgiler _%>
                            </div>
                            <p>
                                <%= user_data.bilgi_bolum[lang] _%>
                            </p>
                        </div>
                    </div>
                </div>
            </section>
            <hr class="m-0" />
            <!-- katalog-->
            <section class="resume-section" id="katalog">
                <div class="resume-section-content">
                    <h2 class="mb-5">Firma Kataloğu</h2>
                    <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                        <div class="flex-grow-1">
                            <h3 class="mb-0">
                                <%= lang_json_data.firma_katalogu _%>
                            </h3>

                            <div style="position:relative;padding-top:max(60%,324px);width:100%;height:0;"><iframe
                                    style="position:absolute;border:none;width:100%;height:100%;left:0;top:0;"
                                    src="<%= user_data.ekatalog_iframe _%>" seamless="seamless" scrolling="no"
                                    frameborder="0" allowtransparency="true" allowfullscreen="true"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <hr class="m-0" />
            <!-- iletisim-->
            <section class="resume-section" id="iletisim">
                <div class="resume-section-content">
                    <h2 class="mb-5"><%= lang_json_data.iletisim _%></h2>
                    <div class="subheading mb-3"><%= lang_json_data.iletisim _%></div>
                    <ul class="fa-ul mb-0">
                        <li>
                            <span class="fa-li"><i class="fa-solid fa-phone"></i></span>
                            <%= user_data.gsmNumber _%>
                        </li>
                        <li>
                            <span class="fa-li"><i class="fa-regular fa-envelope"></i></span>
                            <%= user_data.email _%>
                        </li>
                        <li>
                            <span class="fa-li text-capitalize"><i class="fas fa-check"></i></span>
                            <%= lang_json_data.diger_bilgiler _%> : <%= user_data.diger_bilgiler _%>
                        </li>
                    </ul>
                </div>
            </section>

        </div>


        <!---------------------------------------------------------
  JAVASCRIPT FILES
---------------------------------------------------------->
        <script src="/javascripts/jquery.min.js"></script>
        <script src="/javascripts/bootstrap.min.js"></script>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <!---------------------------------------------------------
      -cookie -axios- 
---------------------------------------------------------->
        <script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"
            integrity="sha512-3j3VU6WC5rPQB4Ld1jnLV7Kd5xr+cq9avvhwqzbH/taCRNURoeEpoPBK9pDyeukwSxwRPJ8fDgvYXd6SkaZ2TA=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <!---------------------------------------------------------
popper js
---------------------------------------------------------->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"
            integrity="sha512-2rNj2KJ+D8s1ceNasTIex6z4HWyOnEYLVC3FigGOmyQCZc2eBXKgOxQmo3oKLHyfcj53uz4QMsRCWNbLd32Q1g=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <!-- sayfa js dosyaları-->
        <script src="/javascripts/site.js"></script>
        <script src="/javascripts/firma.js"></script>
    </body>

    </html>